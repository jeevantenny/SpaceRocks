{
    "name": "spaceship.anim_controller",
    "starting_state": "start",

    "states": {
        "start": {
            "animations": ["start"],
            "transitions": {
                "main": "self.animations_complete"
            }
        },
        "main": {
            "animations": ["main"],
            "transitions": {
                "invincibility": "not obj.invincibility_timer.complete",
                "explode": "not obj.health"
            }
        },
        "invincibility": {
            "animations": ["invincibility"],
            "transitions": {
                "main": "obj.invincibility_timer.complete"
            }
        },
        "explode": {
            "animations": ["explode"]
        }
    }
}