{
    "name": "spaceship.anim_controller",
    "starting_state": "start",

    "states": {
        "start": {
            "animations": ["start"],
            "transitions": {
                "main": "self.animations_complete"
            }
        },
        "main": {
            "animations": ["main"],
            "transitions": {
                "boost": "obj.boost()"
            }
        },
        "boost": {
            "animations": ["main", "boost"],
            "transitions": {
                "main": "not obj.boost()"
            }
        }
    }
}