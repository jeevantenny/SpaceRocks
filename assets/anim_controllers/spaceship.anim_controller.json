{
    "name": "spaceship.anim_controller",
    "starting_state": "start",

    "states": {
        "start": {
            "animations": ["start"],
            "transitions": {
                "main": "self.animations_complete"
            }
        },
        "main": {
            "animations": ["main"],
            "transitions": {
                "invincibility": "obj.invincible",
                "explode": "not obj.health",
                "shield_on": "obj.has_powerup('Shield')"
            }
        },
        "invincibility": {
            "animations": ["invincibility"],
            "transitions": {
                "main": "not obj.invincible"
            }
        },
        "explode": {
            "animations": ["explode"]
        },
        "shield_on": {
            "animations": ["shield_on"],
            "transitions": {
                "shield_off": "not obj.has_powerup('Shield')"
            }
        },
        "shield_off": {
            "animations": ["shield_off"],
            "transitions": {
                "invincibility": "self.animations_complete"
            }
        }
    }
}