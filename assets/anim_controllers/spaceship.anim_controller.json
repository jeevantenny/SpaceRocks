{
    "name": "spaceship.anim_controller",
    "starting_state": "start",

    "states": {
        "start": {
            "animations": ["start"],
            "transitions": {
                "main": "self.animations_complete"
            }
        },
        "main": {
            "animations": ["main"],
            "transitions": {
                "invincibility": "obj.invincible",
                "explode": "not obj.health"
            }
        },
        "invincibility": {
            "animations": ["invincibility"],
            "transitions": {
                "main": "not obj.invincible"
            }
        },
        "explode": {
            "animations": ["explode"]
        }
    }
}