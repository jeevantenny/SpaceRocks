{
    "name": "asteroid.anim_controller",
    "starting_state": "health_1",

    "states": {
        "health_1": {
            "animations": ["health_1"],
            "transitions": {
                "health_2": "obj.health > 1",
                "small_explode": "not obj.health and obj.size == 1",
                "medium_explode": "not obj.health and obj.size == 2"
            }
        },
        "health_2": {
            "animations": ["health_2"],
            "transitions": {
                "health_1": "obj.health < 2"
            }
        },
        "small_explode": {
            "animations": ["small_explode"]
        },
        "medium_explode": {
            "animations": ["medium_explode"]
        }
    }
}