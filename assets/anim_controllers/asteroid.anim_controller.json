{
    "name": "asteroid.anim_controller",
    "starting_state": "small_idle",

    "states": {
        "small_idle": {
            "animations": ["small_idle"],
            "transitions": {
                "medium_health_2": "obj.size == 2",
                "small_explode": "not obj.health"
            }
        },
        "small_explode": {
            "animations": ["small_explode"]
        },



        "medium_health_2": {
            "animations": ["medium_health_2"],
            "transitions": {
                "medium_health_1": "obj.health <= 1"
            }
        },
        "medium_health_1": {
            "animations": ["medium_health_1"],
            "transitions": {
                "medium_explode": "obj.health == 0"
            }
        },
        "medium_explode": {
            "animations": ["medium_explode"]
        }
    }
}